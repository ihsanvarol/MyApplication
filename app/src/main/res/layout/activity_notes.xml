<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotesActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/pass_fragment"
            android:name="com.eliva.myapplication.PassFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/passfragmentlayout"/>

        <fragment
            android:id="@+id/reminder_fragment"
            android:name="com.eliva.myapplication.ReminderFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/reminderfragmentlayout" />

        <fragment
            android:id="@+id/notes_fragment"
            android:name="com.eliva.myapplication.NotesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/notesfragmentlayout" />

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu_notes" />

</androidx.constraintlayout.widget.ConstraintLayout>